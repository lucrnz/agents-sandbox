{
  "$schema": "https://charm.land/crush.json",
  "lsp": {
    "go": {
      "command": "gopls",
      "env": {
        "GOTOOLCHAIN": "go1.25.5"
      }
    },
    "typescript": {
      "command": "bunx",
      "args": ["typescript-language-server", "--stdio"]
    }
  },
  "mcp": {
    "playwright": {
      "type": "stdio",
      "command": "bunx",
      "args": ["@playwright/mcp"],
      "disabled_tools": ["browser_take_screenshot", "browser_install", "browser_file_upload"],
      "disabled": false
    }
  }
}
